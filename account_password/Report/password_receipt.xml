<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="password_receipt_temp">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="rec">
                <div class="header">
                    <div class="row" style="report_header_style">
                        <table style="width: 100%; border-color:rgba(0, 0, 0, 0);">
                            <tr>
                                <td>
                                    <img src='/odoomaq/static/description/icon.png' style="max-height: 75px;"/>
                                </td>
                                <td> 
                                    <div class="text-center">
                                        <h4><t t-esc="rec.company_id.name"/></h4>
                                    </div>
                                </td>
                                <td >
                                    <div class="text-end">
                                        <img src='/odoomaq/static/description/HWlogo.jpg' style="max-height: 75px;"/>
                                    </div>
                                </td>
                            </tr>
                        </table>                        
                    </div>
                </div>
                <div class="article o_report_layout_standard"> 
                    <div class="oe_structure"/>
                    <h2>
                        <span t-field="rec.name"/>
                    </h2>
                    <div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <!-- <th scope="col" class="align-middle">Password No.</th> -->
                                    <th scope="col" class="align-middle">Date</th>
                                    <th scope="col" class="align-middle">Supplier</th>
                                    <th scope="col" class="align-middle">NIT</th>
                                </tr>
                            </thead>
                            <tbody class="table-group-divider">
                                <t t-set= "var_datenow" t-value= "datetime.datetime.now().strftime('%d/%m/%Y')"/>
                                <tr>
                                    <!-- <td><strong style="font-size: 14px;"><t t-esc="rec.name"/></strong></td> -->
                                    <td class="text-center"><strong style="font-size: 14px;" ><t t-esc="var_datenow"/></strong></td>
                                    <td><strong style="font-size: 14px;"><t t-esc="rec.partner_id.name"/></strong></td>
                                    <td class="text-center"><strong style="font-size: 14px;"><t t-esc="rec.partner_id.vat"/></strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="oe_structure"/>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th scope="col" class="align-middle">Invoice</th>
                                <th scope="col" class="align-middle">Series</th>
                                <th scope="col" class="align-middle">Number</th>
                                <th scope="col" class="align-middle">Amount</th>
                                <th scope="col" class="align-middle">Invoice date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="rec.account_move_ids" t-as="line">
                                <td style="font-size: 14px;">
                                    <strong><span t-field="line.name"></span></strong>
                                </td>
                                <td style="font-size: 14px;">
                                    <strong><span t-field="line.fac_serie"></span></strong>
                                </td>
                                <td style="font-size: 14px;">
                                    <strong><span t-field="line.fac_numero"></span></strong>
                                </td>
                                <td style="font-size: 14px;" class="text-end">
                                    <strong t-if="line.amount_total_signed &lt; 0"><span t-esc="line.amount_total_signed * (-1)" t-options='{"widget": "monetary", "display_currency": line.currency_id}'></span></strong>
                                </td>
                                <td style="font-size: 14px;">
                                    <strong><span t-field="line.invoice_date"></span></strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="oe_structure"/>
                    <div style="width: 63%; font-size: 16px;">
                        <P>This counter-receipt does not imply a commitment to pay, only the simple receipt of the documents indicated for review and timely payment, if applicable.</P>
                    </div>
                    <div class="oe_structure"/>
                    <div>
                        <P style="font-size: 18px;" class="fw-bold">RECEPTION DAYS: TUESDAYS AND THURSDAYS</P>
                    </div>
                    <div class="oe_structure"/>
                </div>
                <div class="footer o_standard_footer">
                </div>
            </t>
        </t>
    </template>

    <template id="password_receipt_doc">
        <t t-set="o" t-value="rec"/>
        <t t-call="web.external_layout">
            <div class="page">
                <div id="informations" class="row mb-3">
                    <div class="col-10">
                        <h3>
                            <span t-field="o.name"></span>
                        </h3>
                    </div>
                </div>
                <div>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <!-- <th scope="col" class="align-middle">Password No.</th> -->
                                <th scope="col" class="align-middle">Date</th>
                                <th scope="col" class="align-middle">Supplier</th>
                                <th scope="col" class="align-middle">NIT</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <!-- <t t-set= "var_datenow" t-value= "datetime.datetime.now().strftime('%d/%m/%Y')"/> -->
                            <t t-set= "var_datenow" t-value="datetime.datetime.now(datetime.timezone(datetime.timedelta(hours=-6))).strftime('%d/%m/%Y')"/>
                            <tr>
                                <!-- <td><strong style="font-size: 14px;"><t t-esc="rec.name"/></strong></td> -->
                                <td class="text-center"><strong style="font-size: 14px;" ><t t-esc="var_datenow"/></strong></td>
                                <td><strong style="font-size: 14px;"><t t-esc="rec.partner_id.name"/></strong></td>
                                <td class="text-center"><strong style="font-size: 14px;"><t t-esc="rec.partner_id.vat"/></strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="oe_structure"/>
                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th scope="col" class="align-middle">Invoice</th>
                            <th scope="col" class="align-middle">Series</th>
                            <th scope="col" class="align-middle">Number</th>
                            <th scope="col" class="align-middle">Amount</th>
                            <th scope="col" class="align-middle">Invoice date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="rec.account_move_ids" t-as="line">
                            <td style="font-size: 14px;">
                                <strong><span t-field="line.name"></span></strong>
                            </td>
                            <td style="font-size: 14px;">
                                <strong><span t-field="line.fac_serie"></span></strong>
                            </td>
                            <td style="font-size: 14px;">
                                <strong><span t-field="line.fac_numero"></span></strong>
                            </td>
                            <td style="font-size: 14px;" class="text-end">
                                <strong t-if="line.amount_total_signed &lt; 0"><span t-esc="line.amount_total_signed * (-1)" t-options='{"widget": "monetary", "display_currency": line.currency_id}'></span></strong>
                            </td>
                            <td style="font-size: 14px;">
                                <strong><span t-field="line.invoice_date"></span></strong>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="oe_structure"/>
                <div style="width: 63%; font-size: 16px;">
                    <P>This counter-receipt does not imply a commitment to pay, only the simple receipt of the documents indicated for review and timely payment, if applicable.</P>
                </div>
                <div class="oe_structure"/>
                <div>
                    <P style="font-size: 18px;" class="fw-bold">RECEPTION DAYS: TUESDAYS AND THURSDAYS</P>
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="password_receipt_print">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="rec">
                <t t-call="account_password.password_receipt_doc"/>
            </t>
        </t>
    </template>
</odoo>